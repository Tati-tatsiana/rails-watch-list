

<%= image_tag "logo.jpg", alt: "Movies", width: 200, class: 'logo' %>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "background.jpg" %>')" >
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h1>All lists</h1>
        <ul class="list-group mb-3">
          <% @lists.each do |list| %>
            <li class="list-group-item">
              <%= link_to list.name, list_path(list) %>
            </li>
          <% end %>
        </ul>
        <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
